<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <include layout="@layout/layout_base_common_title"/>


    <ScrollView
        android:layout_weight="11"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodisijixingming789"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="姓名"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_name"
                    android:textSize="14sp"
                    android:hint="请输入姓名"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishufengchedianhua789"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="电话"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/ed_phone"
                    android:textSize="14sp"
                    android:hint="请输入电话"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/linear_qidian"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengcheqidian"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="起点"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_qidian"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ye_jt"
                    android:textSize="14sp"
                    android:hint="请选择起点"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/linear_zhongdian"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengchezhongdian"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="终点"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_zhongdian"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ye_jt"
                    android:textSize="14sp"
                    android:hint="请选择终点"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/linear_tujingchengshi"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengchetujingchengshi"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="途径"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_tujingchengshi"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ye_jt"
                    android:textSize="14sp"
                    android:hint="请选择途径城市"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengchechechang"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="总车长"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/ed_zongchechang"
                        android:layout_weight="9"
                        android:textSize="14sp"
                        android:hint="请输入总车长"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="米"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengchechechang"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="可用车长"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/ed_keyongchechang"
                        android:layout_weight="9"
                        android:textSize="14sp"
                        android:hint="请输入可用车长"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="米"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/linear_time"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@mipmap/img_huodishunfengchechufashijian"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="出发时间"
                    android:textSize="16sp"
                    android:textColor="#383737"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:gravity="end"
                    android:layout_marginLeft="20dp"
                    android:text="请选择出发时间"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_fabuxingcheng"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#ff0202"
        android:gravity="center"
        android:layout_weight="1"
        android:text="发布行程"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</LinearLayout>
